{
  "name": "nestjs-boilerplate-monorepo",
  "version": "1.0.0",
  "description": "Monorepo avec deux boilerplates NestJS : base et mongoose",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:base": "pnpm --filter nestjs-base build",
    "build:mongoose": "pnpm --filter nestjs-mongoose build",
    "build": "pnpm build:base && pnpm build:mongoose",
    "start:base": "pnpm --filter nestjs-base start",
    "start:base:dev": "pnpm --filter nestjs-base start:dev",
    "start:mongoose": "pnpm --filter nestjs-mongoose start",
    "start:mongoose:dev": "pnpm --filter nestjs-mongoose start:dev",
    "lint": "pnpm --filter \"*\" lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "pnpm --filter \"*\" test",
    "clean": "pnpm --filter \"*\" exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "prettier": "^3.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
